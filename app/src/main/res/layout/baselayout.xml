<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="#5b9b62">

            <TextView
                android:text="Player 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtP1Label"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtP1Label"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:id="@+id/linP1L1">

                <Button
                    android:text="+5"
                    android:layout_height="match_parent"
                    android:id="@+id/btnP1Plus5"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp" />

                <Button
                    android:text="+1"
                    android:layout_height="match_parent"
                    android:id="@+id/btnP1Plus1"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp" />

                <TextView
                    android:text="40"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtP1LifeValue"
                    android:textSize="50sp"
                    android:layout_centerHorizontal="false"
                    android:gravity="center" />

                <Button
                    android:text="-1"
                    android:layout_height="match_parent"
                    android:id="@+id/btnP1Min1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp" />

                <Button
                    android:text="-5"
                    android:layout_height="match_parent"
                    android:id="@+id/btnP1Min5"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linP1L2"
                android:layout_above="@+id/linP1L3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center">

                    <TextView
                        android:text="Commander Damage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtP1Commander" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:gravity="center">

                    <TextView
                        android:text="Poison"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtP1Poison" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:id="@+id/linP1L3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:gravity="center">

                    <Button
                        android:text="0"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnP1C2"
                        android:backgroundTint="#3036b2"
                        android:layout_marginLeft="10dp" />

                    <Button
                        android:text="0"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnP1C3"
                        android:backgroundTint="#ab3434"/>

                    <Button
                        android:text="0"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnP1C4"
                        android:backgroundTint="#d06519" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:gravity="center">

                    <Button
                        android:text="0"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnP1Poison"
                        android:backgroundTint="#48f100" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="#ab3434">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="#3036b2">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="#d06519">

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>